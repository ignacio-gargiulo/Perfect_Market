<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/celeste_perfect"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="55dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del usuario"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:id="@+id/comentarioUsuario"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Comentario del usuario"
            android:layout_below="@+id/nombreUsuario"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:id="@+id/valoracionUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoracion ⭐"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:layout_below="@+id/comentarioUsuario"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>